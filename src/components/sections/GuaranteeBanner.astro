<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
  <div class="relative rounded-2xl overflow-hidden group">
    <!-- Gradient Border Effect -->
    <div
      class="absolute inset-0 p-[1px] bg-gradient-to-r from-inkoo-cyan via-inkoo-magenta to-inkoo-cyan bg-[length:200%_auto] animate-[shimmer_3s_linear_infinite] rounded-2xl pointer-events-none"
    >
    </div>

    <div
      class="relative h-full bg-inkoo-black/80 backdrop-blur-md rounded-[15px] p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-10 overflow-hidden"
    >
      <!-- Background Glow -->
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-inkoo-magenta/10 blur-[100px] rounded-full pointer-events-none"
      >
      </div>

      <div class="flex-1 text-center md:text-left relative z-10">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-4">
          Garantía Radical <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-inkoo-cyan to-inkoo-magenta"
            >Inkoo</span
          >
        </h2>
        <p class="text-gray-300 text-lg leading-relaxed max-w-2xl">
          Estamos tan seguros de nuestra calidad (vinilo y sublimación) que si
          un logo se despega en los primeros 3 meses de uso normal, te reponemos
          la prenda gratis. <strong
            class="text-white border-b-2 border-inkoo-cyan"
            >Sin preguntas.</strong
          >
        </p>
      </div>

      <div class="flex-shrink-0 relative z-10">
        <div
          class="w-24 h-24 bg-gradient-to-br from-inkoo-cyan/20 to-inkoo-magenta/20 rounded-full flex items-center justify-center border border-white/20 shadow-[0_0_30px_rgba(214,24,110,0.3)] group-hover:scale-110 transition-transform duration-500"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-white drop-shadow-lg"
          >
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
