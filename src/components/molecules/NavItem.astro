---
interface Props {
    href: string;
    isActive?: boolean;
    class?: string;
}

const { href, isActive = false, class: className = "" } = Astro.props;

const baseClasses =
    "inline-block px-4 py-2 min-h-[44px] flex items-center text-base font-medium transition-colors duration-200";
const activeClasses = isActive
    ? "text-inkoo-cyan border-b-2 border-inkoo-cyan"
    : "text-gray-700 hover:text-inkoo-magenta";
---

<a href={href} class={`${baseClasses} ${activeClasses} ${className}`}>
    <slot />
</a>
