---
import Input from "../atoms/Input.astro";
import Textarea from "../atoms/Textarea.astro";

interface Props {
    label: string;
    name: string;
    id: string;
    type?: "text" | "email" | "tel" | "url" | "textarea";
    placeholder?: string;
    required?: boolean;
    rows?: number;
}

const {
    label,
    name,
    id,
    type = "text",
    placeholder = "",
    required = false,
    rows = 4,
} = Astro.props;
---

<div class="mb-4">
    <label for={id} class="block text-sm font-medium text-gray-700 mb-2">
        {label}
        {required && <span class="text-inkoo-cyan">*</span>}
    </label>
    {
        type === "textarea" ? (
            <Textarea
                name={name}
                id={id}
                placeholder={placeholder}
                required={required}
                rows={rows}
            />
        ) : (
            <Input
                type={type}
                name={name}
                id={id}
                placeholder={placeholder}
                required={required}
            />
        )
    }
</div>
