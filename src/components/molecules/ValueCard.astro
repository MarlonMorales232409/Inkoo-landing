---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="group flex flex-col items-center text-center p-8 bg-inkoo-black/40 backdrop-blur-sm rounded-2xl border border-white/5 hover:border-inkoo-cyan/30 hover:bg-inkoo-black/60 transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(34,211,238,0.2)]"
>
  <div
    class="w-16 h-16 mb-6 flex items-center justify-center bg-gradient-to-br from-inkoo-black to-gray-900 rounded-full border border-white/10 group-hover:border-inkoo-cyan/50 group-hover:scale-110 transition-all duration-300 shadow-inner"
  >
    <svg
      class="w-8 h-8 text-inkoo-cyan group-hover:text-inkoo-magenta transition-colors duration-300"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      {
        icon === "zap" && (
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13 10V3L4 14h7v7l9-11h-7z"
          />
        )
      }
      {
        icon === "award" && (
          <g>
            <circle cx="12" cy="8" r="6" />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8.21 13.89L7 23l5-3 5 3-1.21-9.12"
            />
          </g>
        )
      }
      {
        icon === "map-pin" && (
          <g>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"
            />
            <circle cx="12" cy="10" r="3" />
          </g>
        )
      }
    </svg>
  </div>
  <h3
    class="text-xl font-heading font-bold text-white mb-3 group-hover:text-inkoo-cyan transition-colors duration-300"
  >
    {title}
  </h3>
  <p
    class="text-gray-400 text-base leading-relaxed group-hover:text-gray-300 transition-colors duration-300"
  >
    {description}
  </p>
</div>
