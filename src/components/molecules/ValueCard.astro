---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="group flex flex-col items-center text-center p-8 bg-white shadow-xl shadow-black/5 rounded-2xl border border-gray-100 hover:border-inkoo-magenta/50 hover:shadow-2xl hover:shadow-inkoo-magenta/10 transition-all duration-300"
>
  <div
    class="w-16 h-16 mb-6 flex items-center justify-center bg-inkoo-magenta/10 rounded-full border border-inkoo-magenta/20 group-hover:border-inkoo-magenta/50 group-hover:bg-inkoo-magenta/20 transition-all duration-300"
  >
    <svg
      class="w-8 h-8 text-inkoo-magenta group-hover:text-inkoo-cyan transition-colors duration-300"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      {
        icon === "zap" && (
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13 10V3L4 14h7v7l9-11h-7z"
          />
        )
      }
      {
        icon === "award" && (
          <g>
            <circle cx="12" cy="8" r="6" />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8.21 13.89L7 23l5-3 5 3-1.21-9.12"
            />
          </g>
        )
      }
      {
        icon === "map-pin" && (
          <g>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"
            />
            <circle cx="12" cy="10" r="3" />
          </g>
        )
      }
    </svg>
  </div>
  <h3
    class="text-2xl font-heading font-semibold text-inkoo-black mb-3 group-hover:text-inkoo-magenta transition-colors duration-300"
  >
    {title}
  </h3>
  <p
    class="text-gray-600 text-base leading-relaxed group-hover:text-gray-700 transition-colors duration-300"
  >
    {description}
  </p>
</div>
