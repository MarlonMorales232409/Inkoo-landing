---
interface Props {
  variant?: "primary" | "secondary";
  size?: "small" | "medium" | "large";
  type?: "button" | "submit" | "reset";
  href?: string;
  class?: string;
}

const {
  variant = "primary",
  size = "medium",
  type = "button",
  href,
  class: className = "",
} = Astro.props;

const baseClasses =
  "inline-flex items-center justify-center font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2";

const variantClasses = {
  primary: "bg-inkoo-cyan text-white hover:bg-opacity-90 focus:ring-inkoo-cyan",
  secondary:
    "bg-inkoo-magenta text-white hover:bg-opacity-90 focus:ring-inkoo-magenta",
};

const sizeClasses = {
  small: "px-4 py-2 text-sm min-h-[44px]",
  medium: "px-6 py-3 text-base min-h-[44px]",
  large: "px-8 py-4 text-lg min-h-[48px]",
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;

const Element = href ? "a" : "button";
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type={type} class={classes}>
      <slot />
    </button>
  )
}
