---
interface Props {
  variant?: "primary" | "secondary";
  size?: "small" | "medium" | "large";
  type?: "button" | "submit" | "reset";
  href?: string;
  class?: string;
}

const {
  variant = "primary",
  size = "medium",
  type = "button",
  href,
  class: className = "",
} = Astro.props;

const baseClasses =
  "inline-flex items-center justify-center font-heading font-medium tracking-wide rounded-full transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-black disabled:opacity-50 disabled:cursor-not-allowed";

const variantClasses = {
  primary:
    "bg-inkoo-cyan text-white border border-transparent hover:bg-white hover:text-inkoo-black hover:border-inkoo-black shadow-none hover:translate-y-0",
  secondary:
    "bg-transparent border border-white/20 text-white hover:border-white hover:bg-white/5 hover:text-white shadow-none hover:translate-y-0",
};

const sizeClasses = {
  small: "px-5 py-2 text-sm",
  medium: "px-8 py-3 text-base",
  large: "px-10 py-4 text-lg",
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;

const Element = href ? "a" : "button";
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type={type} class={classes}>
      <slot />
    </button>
  )
}
