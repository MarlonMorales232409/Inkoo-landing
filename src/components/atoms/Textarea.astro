---
interface Props {
  name: string;
  id: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
  class?: string;
}

const {
  name,
  id,
  placeholder = "",
  required = false,
  rows = 4,
  class: className = "",
} = Astro.props;

const baseClasses =
  "w-full px-4 py-3 text-base border-2 border-gray-300 rounded-lg focus:border-inkoo-magenta focus:ring-2 focus:ring-inkoo-magenta focus:ring-opacity-50 transition-colors duration-200 resize-vertical";
---

<textarea
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  rows={rows}
  class={`${baseClasses} ${className}`}></textarea>
