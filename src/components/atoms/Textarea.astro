---
interface Props {
  name: string;
  id: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
  class?: string;
}

const {
  name,
  id,
  placeholder = "",
  required = false,
  rows = 4,
  class: className = "",
} = Astro.props;

const baseClasses =
  "w-full px-4 py-3 text-base bg-[#0a0a0a] border border-white/10 rounded-lg text-white placeholder-gray-500 focus:border-inkoo-cyan focus:ring-2 focus:ring-inkoo-cyan/30 focus:outline-none transition-all duration-200 resize-vertical";
---

<textarea
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  rows={rows}
  class={`${baseClasses} ${className}`}></textarea>
