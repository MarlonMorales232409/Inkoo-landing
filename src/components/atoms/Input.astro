---
interface Props {
  type?: "text" | "email" | "tel" | "url";
  name: string;
  id: string;
  placeholder?: string;
  required?: boolean;
  class?: string;
}

const {
  type = "text",
  name,
  id,
  placeholder = "",
  required = false,
  class: className = "",
} = Astro.props;

const baseClasses =
  "w-full px-4 py-3 text-base bg-[#0a0a0a] border border-white/10 rounded-lg text-white placeholder-gray-500 focus:border-inkoo-cyan focus:ring-2 focus:ring-inkoo-cyan/30 focus:outline-none transition-all duration-200";
---

<input
  type={type}
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  class={`${baseClasses} ${className}`}
/>
