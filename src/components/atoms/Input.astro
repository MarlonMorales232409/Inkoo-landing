---
interface Props {
  type?: "text" | "email" | "tel" | "url";
  name: string;
  id: string;
  placeholder?: string;
  required?: boolean;
  class?: string;
}

const {
  type = "text",
  name,
  id,
  placeholder = "",
  required = false,
  class: className = "",
} = Astro.props;

const baseClasses =
  "w-full px-4 py-3 text-base border-2 border-gray-300 rounded-lg focus:border-inkoo-magenta focus:ring-2 focus:ring-inkoo-magenta focus:ring-opacity-50 transition-colors duration-200";
---

<input
  type={type}
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  class={`${baseClasses} ${className}`}
/>
