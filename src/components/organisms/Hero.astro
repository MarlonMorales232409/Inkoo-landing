---
import { Image } from "astro:assets";
import heroImage from "../../assets/images/hero-press.png";
import Button from "../atoms/Button.astro";
---

<section
  class="relative pt-32 pb-20 sm:pt-40 sm:pb-24 lg:pt-48 lg:pb-32 overflow-hidden min-h-screen flex items-center"
>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <Image
      src={heroImage}
      alt="Industrial Heat Press"
      class="w-full h-full object-cover"
      quality="high"
    />
    <div
      class="absolute inset-0 bg-gradient-to-r from-black/90 via-black/70 to-black/40"
    >
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="max-w-4xl">
      <!-- Headline -->
      <h1
        class="font-heading font-extrabold text-5xl sm:text-6xl lg:text-7xl leading-tight mb-8 animate-slide-up text-white"
        style="animation-duration: 0.8s;"
      >
        Impresión de Camisetas <br class="hidden sm:block" />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-inkoo-cyan to-inkoo-magenta"
          >Profesional</span
        >
        <span class="text-white"> para Tu Negocio</span>
      </h1>

      <!-- Subheadline -->
      <p
        class="text-xl sm:text-2xl text-gray-200 mb-10 leading-relaxed max-w-2xl animate-slide-up shadow-black/50 drop-shadow-md"
        style="animation-delay: 0.2s; animation-duration: 0.8s; opacity: 0; animation-fill-mode: forwards;"
      >
        Sublimación de alta calidad para gimnasios, empresas de construcción y
        eventos. Servicio rápido y atención local.
      </p>

      <!-- Primary CTA -->
      <div
        class="flex flex-col sm:flex-row gap-6 animate-slide-up"
        style="animation-delay: 0.4s; animation-duration: 0.8s; opacity: 0; animation-fill-mode: forwards;"
      >
        <Button variant="primary" size="large" href="#contacto">
          Solicitar Presupuesto
        </Button>
        <Button
          variant="secondary"
          size="large"
          href="https://wa.me/34633272890"
          class="backdrop-blur-md bg-white/10 hover:bg-white/20 border border-white/20"
        >
          WhatsApp Directo
        </Button>
      </div>
    </div>
  </div>
</section>
