---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/organisms/Navbar.astro";
import Hero from "../components/organisms/Hero.astro";
import ValueProposition from "../components/organisms/ValueProposition.astro";
import ContactForm from "../components/organisms/ContactForm.astro";
import Footer from "../components/organisms/Footer.astro";
import FloatingWhatsApp from "../components/organisms/FloatingWhatsApp.astro";
import RecentWork from "../components/sections/RecentWork.astro";
import ProcessSteps from "../components/sections/ProcessSteps.astro";
import GuaranteeBanner from "../components/sections/GuaranteeBanner.astro";
import FAQ from "../components/sections/FAQ.astro";
import ScrollToTop from "../components/organisms/ScrollToTop.astro";
---

<Layout
  title="Inkoo Sublimations - Impresión Profesional de Camisetas para Negocios"
  description="Sublimación de alta calidad para gimnasios, empresas de construcción y organizadores de eventos. Servicio rápido, resultados impecables, atención local en España."
>
  <!-- Navigation -->
  <Navbar />

  <!-- Main Content -->
  <main>
    <!-- Hero Section -->
    <article>
      <Hero />
    </article>

    <!-- Value Proposition Section -->
    <section>
      <ValueProposition />
    </section>

    <!-- Recent Work Section -->
    <RecentWork />

    <!-- Process Steps Section -->
    <ProcessSteps />

    <!-- Guarantee Banner Section -->
    <GuaranteeBanner />

    <!-- FAQ Section -->
    <FAQ />

    <!-- Contact Form Section -->
    <section>
      <ContactForm />
    </section>
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Floating Buttons -->
  <section
    class="fixed bottom-6 right-6 z-50 flex flex-col gap-y-5 items-center justify-center"
  >
    <ScrollToTop />
    <FloatingWhatsApp />
  </section>
</Layout>
